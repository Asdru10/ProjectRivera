<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Excavaciones y Transportes Rivera</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- DataTables CSS con Bootstrap 5 -->
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <!-- CSS del proyecto -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoIngenieria.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

</head>
<body class="bg-light d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-success" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-tools me-1"></i> EXCAVACIONES Y TRANSPORTES RIVERA
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Se muestra solo al usuario Admin -->
                        @if (User.IsInRole(ProyectoIngenieria.Utilities.RolesUsuario.Role_Admin))
                        {

                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active text-success fw-semibold" : "text-muted")"
                                   asp-area="Admin" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door-fill me-1"></i> Inicio
                                </a>
                            </li>

                            <!-- Administración -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-muted" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-briefcase-fill me-1"></i> Administración
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Empresa" asp-action="Index">
                                            <i class="bi bi-building me-1"></i> Empresas
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Proyecto" asp-action="Index">
                                            <i class="bi bi-kanban me-1"></i> Proyectos
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="LugarTrabajo" asp-action="Index">
                                            <i class="bi bi-geo-alt me-1"></i> Lugares de trabajo
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="TipoTrabajo" asp-action="Index">
                                            <i class="bi bi-list-check me-1"></i> Categorías de trabajo
                                        </a>
                                    </li>
                               
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="HorasTrabajo" asp-action="Index">
                                            <i class="bi bi-clock-history me-1"></i> Horas de trabajo
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Reporte" asp-action="Index">
                                            <i class="bi bi-file-earmark-bar-graph me-1"></i> Reportes
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Flota -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-muted" href="#" id="fleetDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-truck me-1"></i> Flota
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="fleetDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Vehiculo" asp-action="Index">
                                            <i class="bi bi-truck-front me-1"></i> Vehículos
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Marca" asp-action="Index">
                                            <i class="bi bi-tags me-1"></i> Marcas de vehículos
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="TipoVehiculo" asp-action="Index">
                                            <i class="bi bi-truck-flatbed me-1"></i> Tipos de vehículos
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="RegistroMantenimiento" asp-action="Index">
                                            <i class="bi bi-wrench-adjustable-circle me-1"></i> Mantenimientos
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Personal -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-muted" href="#" id="staffDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-fill me-1"></i> Personal
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="staffDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Operador" asp-action="Index">
                                            <i class="bi bi-person-workspace me-1"></i> Colaboradores
                                        </a>
                                    </li>
                                </ul>
                            </li>
                      
                              <!-- Notificacion -->
                            <li class="nav-item position-relative">
                                <a class="nav-link text-muted" asp-area="Admin" asp-controller="Notificacion" asp-action="Index" id="notificacionLink">
                                    <i class="bi bi-bell-fill"></i>
                                    <span class="position-absolute top-60 translate-middle-y p-1 bg-danger border border-light rounded-circle"
                                          id="puntoRojo"
                                          style="right: 6px; display: none;">
                                        <span class="visually-hidden">Nueva notificación</span>
                                    </span>
                                </a>
                            </li>

                            

                        }
                    </ul>

                    
                    <div class="ms-auto d-flex align-items-center gap-3">
                        @if (User.IsInRole(ProyectoIngenieria.Utilities.RolesUsuario.Role_Admin))
                        {
                            <!-- Agregar otro usuario Admin -->
                            <a class="nav-link text-muted" asp-area="Identity" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Agregar nuevo Admin
                            </a>
                        }
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="flex-grow-1 py-4">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-top py-3 mt-auto">
        <div class="container text-center">
            <small class="text-muted">
                &copy; 2025 - Excavaciones y Transportes Rivera
            </small>
        </div>
    </footer>

    <!-- Scripts del proyecto -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS con Bootstrap 5 -->
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- JS del proyecto -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Validaciones de formularios ASP.NET Core -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Si hay notificaciones sin leer, el punto rojo de la campana se muestra -->
    <script>
        fetch("/Admin/Notificacion/HayNotificaciones")
            .then(response => response.json())
            .then(data => {
                if (data.hay) {
                    document.getElementById("puntoRojo").style.display = "inline-block";
                }
            });
    </script>
</body>
</html>

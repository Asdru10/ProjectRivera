@using ProyectoIngenieria.Models.ViewModels
@model VehiculoVM

@{
    ViewData["Title"] = Model.Vehiculo.Id == 0 ? "CREAR VEHÍCULO" : "EDITAR VEHÍCULO";

    bool estaVacio = string.IsNullOrWhiteSpace(Model.Vehiculo.Modelo)
        // && string.IsNullOrWhiteSpace(Model.Vehiculo.Tipo)
        && string.IsNullOrWhiteSpace(Model.Vehiculo.Descripcion)
        && string.IsNullOrWhiteSpace(Model.Vehiculo.Placa)
        && (Model.Vehiculo.EmpresaId == 0 || Model.Vehiculo.EmpresaId == null);
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="container py-5">


            <form method="post" asp-action="Upsert">
                <input type="hidden" asp-for="Vehiculo.Id" />
                <input type="hidden" asp-for="Vehiculo.Estado" />

                <!-- Card contenedora -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row g-4">


                            <div class="border-bottom pb-3 mb-4">
                                <h2 class="titulo-formulario">@ViewData["Title"]</h2>
                            </div>

                    
                            <div class="col-md-6">
                                <label asp-for="Vehiculo.MarcaId" class="form-label fw-semibold">Marca del vehículo</label>
                                <select asp-for="Vehiculo.MarcaId" asp-items="@ViewBag.MarcaList" class="form-select">
                                    <option value="">Seleccione una marca</option>
                                </select>
                                <span asp-validation-for="Vehiculo.MarcaId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Vehiculo.Modelo" class="form-label fw-semibold">Modelo</label>
                                <input asp-for="Vehiculo.Modelo" class="form-control" placeholder="Modelo del vehículo" />
                                <span asp-validation-for="Vehiculo.Modelo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Vehiculo.TipoVehiculoId" class="form-label fw-semibold">Tipo de vehículo</label>
                                <select asp-for="Vehiculo.TipoVehiculoId" asp-items="@ViewBag.TipoVehiculoList" class="form-select">
                                    <option value="">Seleccione tipo</option>
                                </select>
                                <span asp-validation-for="Vehiculo.TipoVehiculoId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Vehiculo.Placa" class="form-label fw-semibold">Placa/Serie</label>
                                <input asp-for="Vehiculo.Placa" class="form-control" placeholder="Placa o serie" />
                                <span asp-validation-for="Vehiculo.Placa" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Vehiculo.EmpresaId" class="form-label fw-semibold">Empresa asociada</label>
                                <select asp-for="Vehiculo.EmpresaId" asp-items="@ViewBag.EmpresaList" class="form-select">
                                    <option value="">Seleccione empresa</option>
                                </select>
                                <span asp-validation-for="Vehiculo.EmpresaId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Vehiculo.Descripcion" class="form-label fw-semibold">Descripción</label>
                                <textarea asp-for="Vehiculo.Descripcion" rows="3" class="form-control" placeholder="Color, características, etc."></textarea>
                                <span asp-validation-for="Vehiculo.Descripcion" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 pt-4">
                            <button type="submit" class="btn btn-success w-25">
                                @(Model.Vehiculo.Id == 0 ? "CREAR" : "ACTUALIZAR")
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Vehiculo.Id == 0 || estaVacio)
    {
        <a asp-controller="Vehiculo" asp-action="Index"
           class="btn btn-outline-success rounded-circle shadow p-3"
           style="position: fixed; bottom: 30px; right: 30px; z-index: 1050; width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 2rem;">
            <i class="bi bi-arrow-left"></i>
        </a>
    }
    else
    {
        <a asp-controller="Vehiculo" asp-action="DetalleVehiculo" asp-route-id="@Model.Vehiculo.Id"
           class="btn btn-outline-success rounded-circle shadow p-3"
           style="position: fixed; bottom: 30px; right: 30px; z-index: 1050; width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 2rem;">
            <i class="bi bi-arrow-left"></i>
        </a>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}

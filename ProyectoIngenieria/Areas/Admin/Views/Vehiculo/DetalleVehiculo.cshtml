@model ProyectoIngenieria.Models.ViewModels.VehiculoVM

@{
    ViewData["Title"] = "Detalles del Vehículo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-10">
            <div class="card shadow-lg">


                <div class="card-header card-header-principal text-center">
                    <h2 class="titulo-formulario" >DETALLES DEL VEHÍCULO</h2>
                </div>

                <div class="card-body">
                    <dl class="row justify-content-center">

                        <dt class="col-12 col-sm-4 text-sm-end">Marca</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@Model.Vehiculo.Marca.NombreMarca</dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Modelo</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@Model.Vehiculo.Modelo</dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Estado</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@Model.Vehiculo.Estado</dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Descripción</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@(!string.IsNullOrWhiteSpace(Model.Vehiculo.Descripcion) ? Model.Vehiculo.Descripcion : "-")</dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Placa</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@(!string.IsNullOrWhiteSpace(Model.Vehiculo.Placa) ? Model.Vehiculo.Placa : "-")</dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Tipo</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@Model.Vehiculo.TipoVehiculo.Tipo</dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Empresa</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@Model.Vehiculo.Empresa?.Nombre</dd>
                    </dl>

                    <div class="mt-4 d-flex justify-content-center gap-2 flex-nowrap">
                        <a asp-controller="Vehiculo" asp-action="Upsert" asp-route-id="@Model.Vehiculo.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i> EDITAR
                        </a>

                        @if (Model.Vehiculo.Estado == "Activo")
                        {
                            <button class="btn btn-danger" onclick="Delete(@Model.Vehiculo.Id)">
                                <i class="bi bi-trash"></i> DESACTIVAR
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-primary" onclick="Activar(@Model.Vehiculo.Id)">
                                <i class="bi bi-check-circle"></i> ACTIVAR
                            </button>
                        }
                       
                        <a href="/Admin/RegistroCombustible/Index/@Model.Vehiculo.Id" class="btn btn-outline-success">
                            <i class="bi bi-fuel-pump"></i> REGISTRO COMBUSTIBLE
                        </a>

                        <a href="/Admin/RegistroMantenimiento/Index/@Model.Vehiculo.Id" class="btn btn-outline-success">
                            <i class="bi bi-wrench-adjustable-circle"></i> MANTENIMIENTO
                        </a>

                        <a href="/Admin/HorasTrabajo/Index/@Model.Vehiculo.Id" class="btn btn-outline-success">
                            <i class="bi bi-clock-history"></i> HORAS DE TRABAJO
                        </a>

                        <a href="/Admin/Vehiculo/DocumentoVehiculo/@Model.Vehiculo.Id" class="btn btn-outline-success">
                            <i class="bi bi-folder2-open"></i> DOCUMENTOS
                        </a>
                    </div>
                </div>
            </div>

            <a asp-controller="Vehiculo" asp-action="Index"
               class="btn btn-outline-success rounded-circle shadow p-3"
               style="position: fixed; bottom: 30px; right: 30px; z-index: 1050; width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 2rem;">
                <i class="bi bi-arrow-left"></i>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/vehiculo-detalle.js"></script>
}

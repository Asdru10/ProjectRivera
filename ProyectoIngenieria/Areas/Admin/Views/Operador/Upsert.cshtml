@using ProyectoIngenieria.Models.ViewModels
@model OperadorVM

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="container py-5">
            <form method="post">
                <input type="hidden" id="redirigirAsignar" name="redirigirAsignar" value="false" />

                <!-- Card contenedora -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row g-4">


                            <div class="border-bottom pb-3 mb-4">
                                <h2 class="titulo-formulario">
                                    @(Model.Operador.Cedula == 0 ? "AGREGAR" : "ACTUALIZAR") COLABORADOR
                                </h2>
                            </div>

                            @if (Model.Operador.Cedula == 0)
                            {
                                <div class="col-md-6">
                                    <label asp-for="Operador.Cedula" class="form-label fw-semibold">Cédula</label>
                                    <input asp-for="Operador.Cedula" type="number" class="form-control" placeholder="Ingrese la cédula del colaborador" />
                                    <span asp-validation-for="Operador.Cedula" class="form-text text-danger"></span>
                                </div>
                            }
                            else
                            {
                                <input type="hidden" asp-for="Operador.Cedula" />
                            }

                            <div class="col-md-6">
                                <label asp-for="Operador.Nombre" class="form-label fw-semibold"></label>
                                <input asp-for="Operador.Nombre" type="text" class="form-control" placeholder="Ingrese el nombre del colaborador" />
                                <span asp-validation-for="Operador.Nombre" class="form-text text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Operador.Telefono" class="form-label fw-semibold">Número de teléfono</label>
                                <input asp-for="Operador.Telefono" type="number" class="form-control" placeholder="Ingrese el número de teléfono del colaborador" />
                                <span asp-validation-for="Operador.Telefono" class="form-text text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Operador.TipoColaborador" class="form-label fw-semibold">Tipo de colaborador</label>
                                <select asp-for="Operador.TipoColaborador" class="form-select">
                                    <option value="">Seleccione el tipo de colaborador</option>
                                    <option value="Interno">Interno</option>
                                    <option value="Externo">Externo</option>
                                </select>
                                <span asp-validation-for="Operador.TipoColaborador" class="form-text text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-end gap-2 pt-3">

                              <button type="submit" class="btn btn-success w-15" onclick="document.getElementById('redirigirAsignar').value = 'true'">
                                    GUARDAR Y ASIGNAR VEHÍCULO
                                </button>

                                <button type="submit" class="btn btn-success w-25">
                                    GUARDAR
                                </button>
                            </div>
                        </div>
                    </div>
                </div> <!-- Fin card -->
            </form>
        </div>
    </div>

    <!-- Botón flotante de regreso -->
    <a asp-controller="Operador" asp-action="Index"
       class="btn btn-outline-success rounded-circle shadow p-3"
       style="position: fixed; bottom: 30px; right: 30px; z-index: 1050; width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 2rem;">
        <i class="bi bi-arrow-left"></i>
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).on('click', '.btn-desactivar', function (e) {
            e.preventDefault();

            const id = $(this).data('id');

            Swal.fire({
                title: '¿Estás seguro?',
                text: "Esta acción puede afectar otras areas donde se involucra al colaborador.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Sí',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Operador/DesactivarOperador',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire('Exito', 'El estado del Colaborador cambio correctamente', 'success')
                                    .then(() => {
                                        // Redireccionar o recargar si se desea
                                        window.location.href = '/Admin/Operador/Index';
                                    });
                            } else {
                                Swal.fire('Error', response.message, 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('Error', 'Error al procesar la solicitud.', 'error');
                        }
                    });
                }
            });
        });

    </script>

}

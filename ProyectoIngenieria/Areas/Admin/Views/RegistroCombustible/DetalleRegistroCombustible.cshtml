@model ProyectoIngenieria.Models.ViewModels.RegistroCombustibleVM

@{
    ViewData["Title"] = "Detalles del Registro";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-10">
            <div class="card shadow-lg">
                <div class="card-header card-header-principal text-center">
                    <h2 class="titulo-formulario">DETALLES DEL REGISTRO </h2>
                </div>

                <div class="card-body">
                    <dl class="row justify-content-center">


                        <dt class="col-12 col-sm-4 text-sm-end">Fecha</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@Model.RegistroCombustible.FechaCompra</dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Marca</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">
                            @(!string.IsNullOrWhiteSpace(Model.RegistroCombustible.Vehiculo.Marca.NombreMarca)
                                ? Model.RegistroCombustible.Vehiculo.Marca.NombreMarca
                                : "-")
                        </dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Modelo</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">
                            @(!string.IsNullOrWhiteSpace(Model.RegistroCombustible.Vehiculo.Modelo)
                                ? Model.RegistroCombustible.Vehiculo.Modelo
                                : "-")
                        </dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Placa</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">
                            @(!string.IsNullOrWhiteSpace(Model.RegistroCombustible.Vehiculo.Placa)
                                ? Model.RegistroCombustible.Vehiculo.Placa
                                : "-")
                        </dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Litros comprados</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@Model.RegistroCombustible.LitrosComprados.ToString("N2")</dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Precio del litro</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@Model.RegistroCombustible.PrecioLitro.ToString("N2")</dd>

                        <dt class="col-12 col-sm-4 text-sm-end">Total pagado</dt>
                        <dd class="col-12 col-sm-6 text-sm-start">@Model.RegistroCombustible.TotalPagado.ToString("N2")</dd>
                    </dl>

                    <div class="mt-4 d-flex justify-content-center">
                        <a asp-controller="RegistroCombustible" asp-action="Upsert" asp-route-id="@Model.RegistroCombustible.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i> EDITAR
                        </a>
                    </div>
                </div>
            </div>

            @if (Model.RegistroCombustible.Id != 0)
            {
                <a asp-controller="RegistroCombustible" asp-action="Index" asp-route-id="@Model.RegistroCombustible.VehiculoId"
                   class="btn btn-outline-success rounded-circle shadow p-3"
                   style="position: fixed; bottom: 30px; right: 30px; z-index: 1050; width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 2rem;">
                    <i class="bi bi-arrow-left"></i>
                </a>
            }
            else
            {
                <a asp-controller="RegistroCombustible" asp-action="Index"
                   class="btn btn-outline-success rounded-circle shadow p-3"
                   style="position: fixed; bottom: 30px; right: 30px; z-index: 1050; width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 2rem;">
                    <i class="bi bi-arrow-left"></i>
                </a>
            }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/vehiculo-detalle.js"></script>
}
